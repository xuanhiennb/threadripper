<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_red"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:id="@+id/wrapperView"
    tools:context="com.chatapp.threadripper.authentication.SignUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.andexert.library.RippleView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            app:rv_centered="true"
            app:rv_color="@color/colorRippleView"
            app:rv_rippleDuration="100">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:padding="12dp"
                android:src="@drawable/ic_action_back" />
        </com.andexert.library.RippleView>


    </RelativeLayout>
<ScrollView
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvCheckConnection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="2dp"
            android:text="Connection is established!"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp100"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="25dp">

            <EditText
                android:id="@+id/edtUserName"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:drawableLeft="@drawable/ic_action_account_box_accent"
                android:drawablePadding="8dp"
                android:hint="Username"
                android:inputType="text"
                tools:ignore="DuplicateIds"
                android:drawableStart="@drawable/ic_action_account_box_accent" />

            <EditText
                android:id="@+id/edtEmail"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:drawableLeft="@drawable/ic_action_emaill_accent"
                android:drawablePadding="8dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:drawableStart="@drawable/ic_action_emaill_accent" />


            <EditText
                android:id="@+id/edtDisplayName"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:drawableLeft="@drawable/ic_action_display_name_accent"
                android:drawablePadding="8dp"
                android:hint="Display Name"
                android:inputType="text"
                android:drawableStart="@drawable/ic_action_display_name_accent" />


            <EditText
                android:id="@+id/edtPassword"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:drawableLeft="@drawable/ic_action_password_red"
                android:drawablePadding="8dp"
                android:hint="Password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/edtConfirmPassword"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:drawableLeft="@drawable/ic_action_key_accent"
                android:drawablePadding="8dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:drawableStart="@drawable/ic_action_key_accent" />

            <Button
                android:id="@+id/btnSignUp"
                style="@style/ButtonYellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Create account"
                android:textAllCaps="true"
                android:textAppearance="@style/QuicksandBold" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>

</LinearLayout>
