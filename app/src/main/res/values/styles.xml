<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorRedLight</item>
        <item name="colorPrimaryDark">@color/colorRedLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppThemeFull" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorRedLight</item>
        <item name="colorPrimaryDark">@color/colorRedLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="h2">
        <item name="android:textSize">@dimen/h2</item>
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>

    <style name="EditText">
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:paddingTop">@dimen/space15</item>
        <item name="android:paddingBottom">@dimen/space15</item>
        <item name="android:paddingLeft">@dimen/space20</item>
        <item name="android:paddingRight">@dimen/space20</item>
        <item name="android:background">@drawable/bg_top_grey</item>
        <item name="android:textAppearance">@style/Light</item>
    </style>

    <style name="TextViewHeaderList">
        <item name="android:textSize">@dimen/h4</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">@dimen/space5</item>
        <item name="android:paddingRight">@dimen/space5</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textAppearance">@style/Light</item>
    </style>

    <style name="EditTextCorner">
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:paddingTop">@dimen/space5</item>
        <item name="android:paddingBottom">@dimen/space5</item>
        <item name="android:paddingLeft">@dimen/space15</item>
        <item name="android:paddingRight">@dimen/space15</item>
        <item name="android:background">@drawable/bg_top_grey_corner</item>
        <item name="android:textAppearance">@style/Light</item>
    </style>

    <style name="EditTextBgLight">
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:padding">@dimen/space10</item>
        <item name="android:background">#ececec</item>
        <item name="android:textAppearance">@style/Light</item>
    </style>

    <style name="ButtonYellow">
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_yellow</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator" tools:targetApi="LOLLIPOP">@null</item>
        <item name="android:padding">@dimen/space15</item>
    </style>


    <style name="ButtonFillAccentCorner">
        <item name="android:textSize">@dimen/h5</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/btn_yellow</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator" tools:targetApi="LOLLIPOP">@null</item>
        <item name="android:paddingTop">@dimen/space5</item>
        <item name="android:paddingBottom">@dimen/space5</item>
        <item name="android:paddingLeft">@dimen/space20</item>
        <item name="android:paddingRight">@dimen/space20</item>
    </style>

    <style name="Light" parent="android:TextAppearance">
        <item name="fontPath">font/Nunito-Regular.ttf</item>
    </style>

    <style name="ExtraLight" parent="android:TextAppearance">
        <item name="fontPath">font/Nunito-Light.ttf</item>
    </style>

    <style name="QuicksandBold" parent="android:TextAppearance">
        <item name="fontPath">font/Quicksand-Bold.ttf</item>
    </style>

    <style name="QuicksandMedium" parent="android:TextAppearance">
        <item name="fontPath">font/Quicksand-Medium.ttf</item>
    </style>

</resources>
